@{
    string user_info = ViewBag.user_info;
}
<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width" />
	<title>Template • TodoMVC</title>
	<link rel="stylesheet" href="@Url.Content("~/Content/base.css")" />
	<!-- CSS overrides - remove if you don't need it -->
	<link rel="stylesheet" href="@Url.Content("~/Content/app.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/toastr.css")" type="text/css" />
	<!--[if IE]>
	<script src="@Url.Content("~/Scripts/ie.js")"></script>
	<![endif]-->
</head>
<body>
    <header id="user_info">
        Hello, @Html.ActionLink(user_info, "Manage", "Account", null, new { @class = "username", title = "Manage" })!
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()" class="float-right">Log off</a>
        }
    </header>
	<section id="todoapp">
		<header id="header">
			<h1>Get It Done..</h1>
			@using (Html.BeginForm("Create", "Todo",FormMethod.Post, new { @id = "form_Create"})){ 
                <input id="new-todo" name="new_todo" placeholder="What needs to be done?" autofocus>
            }
		</header>
		@RenderBody()
        <!-- This footer should hidden by default and shown when there are todos -->
        <footer id="footer">
	        <!-- This should be `0 items left` by default -->
	        <span id="todo-count"><strong>1</strong> item left</span>
	        <!-- Remove this if you don't implement routing -->
	        <ul id="filters">
		        <li>
			        <a class="selected" href="#/">All</a>
		        </li>
		        <li>
			        <a href="#/active">Active</a>
		        </li>
		        <li>
			        <a href="#/completed">Completed</a>
		        </li>
	        </ul>
	        <button id="clear-completed">Clear completed (1)</button>
        </footer>
	</section>
	<footer id="info">
		<p>Double-click to edit a todo</p>
	</footer>
    @Scripts.Render("~/bundles/jquery")
    <script src="@Url.Content("~/Scripts/toastr.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/global.custom.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
	<script src="@Url.Content("~/Scripts/app.js")"></script>
</body>
</html>

